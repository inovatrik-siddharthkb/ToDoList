@model ToDoList.Models.Page

@{
    ViewData["Title"] = "Page Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/Index.css" />

<div class="container-fluid bg-wrapper p-4">
    <!-- Logo and Header -->
    <div class="d-flex align-items-center mb-4">
        <img src="~/logo/Logo.png" alt="Logo" style="height: 80px; width: auto;" />
        <h2 class="ms-3 mb-0">Page Details</h2>
    </div>

    <!-- Details Card -->
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm p-4 rounded">
                <dl class="row">
                    <dt class="col-sm-4">Content</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Pcontent)</dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" asp-route-bookId="@Model?.PbookId" class="btn btn-secondary">← Back to List</a>
                    <a asp-action="Edit" asp-route-id="@Model?.PageId" class="btn btn-primary">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
