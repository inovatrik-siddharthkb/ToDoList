@model ToDoList.Models.Page

@{
    ViewData["Title"] = "Edit Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/Index.css" />

<div class="container-fluid bg-wrapper p-4">
    <!-- Logo + Heading -->
    <div class="d-flex align-items-center mb-4">
        <img src="~/logo/Logo.png" alt="Logo" style="height: 80px; width: auto;" />
        <h2 class="ms-3 mb-0">Edit Page</h2>
    </div>

    <!-- Edit Form Card -->
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm p-4 rounded">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PageId" />
                    <input type="hidden" asp-for="PbookId" />

                    <div class="mb-3">
                        <label asp-for="Pcontent" class="form-label">Content</label>
                        <input asp-for="Pcontent" class="form-control" />
                        <span asp-validation-for="Pcontent" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" asp-route-bookId="@Model.PbookId" class="btn btn-secondary">← Back to List</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
