@model ToDoList.Models.Page

@{
    ViewData["Title"] = "Delete Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/Index.css" />

<div class="container-fluid bg-wrapper p-4">
    <!-- Logo and Header -->
    <div class="d-flex align-items-center mb-4">
        <img src="~/logo/Logo.png" alt="Logo" style="height: 80px; width: auto;" />
        <h2 class="ms-3 mb-0">Delete Page</h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm p-4 rounded">
                <h5 class="text-danger">Are you sure you want to delete this?</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Content</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Pcontent)</dd>

                    <dt class="col-sm-4">Book</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Pbook.BookName)</dd>
                </dl>

                <form asp-action="Delete" method="post" class="mt-4 d-flex justify-content-between">
                    <input type="hidden" asp-for="PageId" />
                    <a asp-action="Index" asp-route-bookId="@Model?.PbookId" class="btn btn-secondary">← Back to List</a>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
