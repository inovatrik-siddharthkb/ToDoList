@model ToDoList.Models.Book

@{
    ViewData["Title"] = "Delete Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Custom CSS -->
<link rel="stylesheet" href="~/css/Index.css" />

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container-fluid bg-wrapper p-4">
    <!-- Logo + Heading -->
    <div class="d-flex align-items-center mb-4">
        <img src="~/logo/Logo.png" alt="Logo" style="height: 80px; width: auto;" />
        <h2 class="ms-3 mb-0 text-danger">Delete Book</h2>
    </div>

    <!-- Delete Confirmation -->
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm p-4 rounded border-danger">
                <h4 class="text-danger mb-3">Are you sure you want to delete this?</h4>

                <dl class="row mb-0">
                    <dt class="col-sm-4">Book Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.BookName)</dd>

                    <dt class="col-sm-4">User Email</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Email)</dd>
                </dl>

                <form asp-action="Delete" method="post" class="mt-4 d-flex justify-content-between">
                    <input type="hidden" asp-for="BookId" />
                    <a asp-action="Index" class="btn btn-secondary">← Back to List</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
